{
  "name": "@coollime/leetcode.challenge.monthly",
  "description": "LeetCode Monthly Challenge",
  "license": "MIT",
  "author": "Cool Lime",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "test": "jest --coverage",
    "validate-ts": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-package-json": "^2.8.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts",
      "!src/public_apis.ts",
      "!src/common/**/*"
    ],
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsconfig": "tsconfig.json"
      }
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,json,md}": "prettier --write",
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
